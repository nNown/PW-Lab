<Window x:Class="PW_Lab_WMarciniak.Stoper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab_WMarciniak"
        mc:Ignorable="d"
        Title="Stoper" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label x:Name="stoper" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
            <Button x:Name="start" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="stop" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
