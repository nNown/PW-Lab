<Window x:Class="PW_Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid Name="DataGrid" ItemsSource="{Binding TableData, Mode=TwoWay, NotifyOnSourceUpdated=True}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
            <Button Margin="10 0 5 0" Padding="10" Click="SaveCSV">Zapis do CSV</Button>
            <Button Margin="5 0 10 0" Padding="10" Click="LoadCSV">Odczyt z CSV</Button>
        </StackPanel>
    </StackPanel>
</Window>
