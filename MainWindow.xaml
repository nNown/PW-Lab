<Window x:Class="PW_Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Margin="20">
            <Button Margin="0 10" Padding="10 5" Click="LoadImage">Choose</Button>
            <Button Margin="0 10" Padding="10 5" Click="Mirror">A</Button>
            <Button Margin="0 10" Padding="10 5" Click="Rotate">B</Button>
            <Button Margin="0 10" Padding="10 5" Click="GreenOnly">C</Button>
            <Button Margin="0 10" Padding="10 5" Click="Negative">D</Button>
        </StackPanel>
        <Image Name="Img"></Image>
    </StackPanel>
</Window>
