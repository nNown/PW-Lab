<Window x:Class="PW_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Button Margin="10" Padding="10 5" Click="PlaySong">Play</Button>
            <Button Margin="10" Padding="10 5" Click="StopSong">Stop</Button>
        </StackPanel>
        <ListBox Margin="20 10" Padding="10 5" Name="MusicList" ItemsSource="{Binding MusicFiles}"></ListBox>
    </StackPanel>
</Window>
