<Window x:Class="PW_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20 10">
        <TextBox Padding="20 5" Text="{Binding PlainText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"></TextBox>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0 15">
            <TextBox Padding="20 5" Margin="20 5" Text="{Binding EncryptionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Padding="20 5" Margin="20 5" Click="SaveData">Save</Button>
        </StackPanel>
        <TextBox Padding="20 5" IsReadOnly="True" Background="#eee" Text="{Binding EncryptedText, Mode=TwoWay}" TextWrapping="Wrap"></TextBox>
    </StackPanel>
</Window>
