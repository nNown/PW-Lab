<Window x:Class="PW_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20" Orientation="Horizontal">
        <StackPanel Margin="10 0">
            <Label>Lista Lotnisk</Label>
            <ListBox Padding="10 5" Name="AirportsList" ItemsSource="{Binding Airports}" DisplayMemberPath="AirportName"></ListBox>
        </StackPanel>
        <StackPanel Margin="10 0">
            <StackPanel Margin="0 10">
                <CheckBox Name="ICAOBox">Kod lotniska ICAO</CheckBox>
                <CheckBox Name="IATABox">Kod lotniska IATA</CheckBox>
                <CheckBox Name="PassengersBox">Liczba pasażerów</CheckBox>
                <CheckBox Name="VoivodeshipBox">Województwo</CheckBox>
                <CheckBox Name="CityBox">Miasto</CheckBox>
            </StackPanel>
            <Button Click="LoadAiportDetails">Szczegóły</Button>
        </StackPanel>
    </StackPanel>
</Window>
