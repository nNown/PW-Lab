<Window x:Class="PW_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW_Lab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" Margin="20">
        <Label FontSize="36" Margin="0 0 0 10">Catcher</Label>
        <ComboBox Name="AnimalsSelection" ItemsSource="{Binding Animals, Mode=TwoWay}" Margin="0 0 0 10"></ComboBox>
        <ComboBox Name="DifficultySelection"  ItemsSource="{Binding Difficulty, Mode=TwoWay}" Margin="0 0 0 20"></ComboBox>
        <Button FontSize="20" Padding="10 5" Click="StartGame">Start</Button>
    </StackPanel>
</Window>
